<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <EditText
        android:id="@+id/wprowadzNumer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hello"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:inputType="phone"
        android:hint="Wprowadź numer telefonu"
        />

    <Button
        android:textColor="#ffffff"
        android:layout_width="match_parent"
        android:background="#4682B4"
        android:layout_height="wrap_content"
        android:text="Zadzwoń"
        android:layout_below="@+id/wprowadzNumer"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:onClick="zadzwonClicked"
        />

    <EditText
        android:inputType="textUri"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/hello"
        />

    <Button
        android:text="Otwórz w przeglądarce"
        android:id="@+id/open"
        android:onClick="openClicked"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/url"
        />

</RelativeLayout>